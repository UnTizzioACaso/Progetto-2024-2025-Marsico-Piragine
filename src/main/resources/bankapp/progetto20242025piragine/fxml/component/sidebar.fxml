<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Line?>

<VBox prefWidth="320"
      style="-fx-background-color: white;"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="bankapp.progetto20242025piragine.controller.component.SidebarController">

    <!-- HEADER -->
    <Pane prefHeight="70" style="-fx-background-color: #efefef;">
        <effect>
            <DropShadow offsetX="-2.0" spread="0.12">
                <color><Color opacity="0.35"/></color>
            </DropShadow>
        </effect>
    </Pane>

    <!-- HOME -->
    <Button maxWidth="Infinity"
            prefHeight="72"
            onAction="#goHome"
            text="Home"
            style="-fx-background-color: #d70707;
                   -fx-text-fill: white;
                   -fx-font-size: 22px;
                   -fx-font-weight: 800;
                   -fx-alignment: CENTER_LEFT;
                   -fx-border-color: #b5161b;
                   -fx-border-width: 0 0 2 0;">
        <effect>
            <InnerShadow offsetX="-10" offsetY="-10" radius="26.9">
                <color><Color opacity="0.25"/></color>
            </InnerShadow>
        </effect>
    </Button>

    <!-- CARTE -->
    <Button maxWidth="Infinity"
            prefHeight="72"
            onAction="#goCards"
            text="Carte"
            style="-fx-background-color: #d70707;
                   -fx-text-fill: white;
                   -fx-font-size: 22px;
                   -fx-font-weight: 800;
                   -fx-alignment: CENTER_LEFT;
                   -fx-border-color: #b5161b;
                   -fx-border-width: 0 0 2 0;">
        <effect>
            <InnerShadow offsetX="-10" offsetY="-10" radius="26.9">
                <color><Color opacity="0.25"/></color>
            </InnerShadow>
        </effect>
    </Button>

    <!-- AMICI -->
    <Button maxWidth="Infinity"
            prefHeight="72"
            onAction="#goFriends"
            text="Amici"
            style="-fx-background-color: #d70707;
                   -fx-text-fill: white;
                   -fx-font-size: 22px;
                   -fx-font-weight: 800;
                   -fx-alignment: CENTER_LEFT;
                   -fx-border-color: #b5161b;
                   -fx-border-width: 0 0 2 0;">
        <effect>
            <InnerShadow offsetX="-10" offsetY="-10" radius="26.9">
                <color><Color opacity="0.25"/></color>
            </InnerShadow>
        </effect>
    </Button>

    <!-- SEPARATORE -->
    <Pane prefHeight="10">
        <children>
            <Line startX="20" endX="300" layoutY="5" stroke="#ef0000"/>
        </children>
    </Pane>

    <!-- SPACER -->
    <Pane VBox.vgrow="ALWAYS"/>

    <!-- ACCOUNT (icona dentro il bottone) -->
    <Button maxWidth="Infinity"
            prefHeight="78"
            onAction="#openAccountPopup"
            text="Account"
            style="-fx-background-color: #d70707;
                   -fx-text-fill: white;
                   -fx-font-size: 26px;
                   -fx-font-weight: 900;
                   -fx-alignment: CENTER_LEFT;
                   -fx-border-color: #b5161b;
                   -fx-border-width: 2 0 0 0;">
        <effect>
            <InnerShadow offsetX="-10" offsetY="-10" radius="26.9">
                <color><Color opacity="0.25"/></color>
            </InnerShadow>
        </effect>

        <!-- Icona account SENZA padding nello style -->
        <graphic>
            <HBox spacing="14">
                <ImageView fitHeight="26" fitWidth="26" preserveRatio="true">
                    <image>
                        <Image url="@../../imgs/userIcon.png"/>
                    </image>
                </ImageView>
                <Pane/>
            </HBox>
        </graphic>
    </Button>

</VBox>
