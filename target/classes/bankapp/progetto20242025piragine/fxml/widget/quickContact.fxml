<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane
        maxHeight="361.0" maxWidth="490.0"
        minHeight="160.0" minWidth="52.0"
        prefHeight="270.0" prefWidth="450.0"
        style="-fx-background-color: white; -fx-background-radius: 18; -fx-border-radius: 18; -fx-border-color: #E5E5E5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 5, 0, 0, 1);"
        xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">

    <children>

        <!-- Avatar -->
        <ImageView
                fitHeight="64.0" fitWidth="64.0"
                style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8, 0, 0, 2);"
                AnchorPane.topAnchor="40.0"
                AnchorPane.leftAnchor="40.0">
            <image>
                <Image url="@../../imgs/quickContact.png" />
            </image>
        </ImageView>

        <!-- Nome -->
        <Label
                text="Franco Pesce"
                style="-fx-font-weight: 700; -fx-text-fill: #1F1F1F; -fx-font-family: 'Segoe UI Semibold';"
                AnchorPane.topAnchor="40.0"
                AnchorPane.leftAnchor="120.0"
                AnchorPane.rightAnchor="20.0">
            <font>
                <Font size="28.0" />
            </font>
        </Label>

        <!-- Pulsanti in basso centrati -->
        <HBox spacing="16.0"
              AnchorPane.bottomAnchor="20.0"
              AnchorPane.leftAnchor="40.0"
              AnchorPane.rightAnchor="40.0"
              alignment="CENTER">
            <children>
                <Button
                        text="Invia"
                        mnemonicParsing="false"
                        prefHeight="42.0" prefWidth="103.0"
                        maxWidth="Infinity"
                        style="-fx-background-color: #3CAB6B; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 18; -fx-background-radius: 12; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 5, 0, 0, 1); -fx-font-weight: 600;" />

                <Button
                        text="Richiedi"
                        mnemonicParsing="false"
                        prefHeight="42.0" prefWidth="103.0"
                        maxWidth="Infinity"
                        style="-fx-background-color: #3CAB6B; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 18; -fx-background-radius: 12; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 5, 0, 0, 1);" />
            </children>
        </HBox>

    </children>
</AnchorPane>
