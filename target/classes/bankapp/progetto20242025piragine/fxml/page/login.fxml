<GridPane prefHeight="650.0" prefWidth="1000.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bankapp.progetto20242025piragine.controller.page.LoginController">

    <columnConstraints>
        <ColumnConstraints percentWidth="50.0" />
        <ColumnConstraints percentWidth="50.0" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints prefHeight="80.0" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints prefHeight="60.0" />
    </rowConstraints>


    <ImageView fitWidth="442.0" preserveRatio="true" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.rowSpan="2" GridPane.valignment="CENTER">
        <image>
            <Image url="@../../imgs/LogoMazeBank.png" />
        </image>
      <effect>
         <InnerShadow choke="0.17" height="53.38" offsetX="-10.0" offsetY="-10.0" radius="26.93" width="56.34">
            <color>
               <Color opacity="0.25" />
            </color>
         </InnerShadow>
      </effect>
    </ImageView>

    <Pane style="-fx-background-color: #d70707;" GridPane.columnIndex="0" GridPane.rowIndex="2">
      <effect>
         <InnerShadow choke="0.17" height="53.38" offsetX="-10.0" offsetY="-10.0" radius="26.93" width="56.34">
            <color>
               <Color opacity="0.25" />
            </color>
         </InnerShadow>
      </effect></Pane>

    <!-- ================= DESTRA ================= -->

    <Pane GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.rowSpan="2" />

    <Pane style="-fx-background-color: #d70707;" GridPane.columnIndex="1" GridPane.rowIndex="0">
      <effect>
         <InnerShadow choke="0.17" height="53.38" offsetX="-10.0" offsetY="-10.0" radius="26.93" width="56.34">
            <color>
               <Color opacity="0.25" />
            </color>
         </InnerShadow>
      </effect></Pane>

    <Label style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" text="Accedi al tuo conto" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER" />

    <VBox alignment="CENTER" maxWidth="520.0" prefWidth="520.0" spacing="16.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">

        <VBox maxWidth="520.0" spacing="12.0">
            <padding>
                <Insets bottom="0.0" left="50.0" right="50.0" top="0.0" />
            </padding>

            <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #222;" text="Email" />

            <TextField fx:id="emailLoginTextField" promptText="Email" style="-fx-background-color: #f2f2f2;                               -fx-border-color: #d9d9d9;                               -fx-background-radius: 10;                               -fx-border-radius: 10;                               -fx-padding: 14;                               -fx-font-size: 16px;" />

            <StackPane>
                <PasswordField fx:id="passwordLoginTextField" promptText="Password" style="-fx-background-color: #f2f2f2;                                       -fx-border-color: #d9d9d9;                                       -fx-background-radius: 10;                                       -fx-border-radius: 10;                                       -fx-padding: 14 60 14 14;                                       -fx-font-size: 16px;" />

                <Button focusTraversable="false" style="-fx-background-color: transparent;                                -fx-padding: 0 16 0 0;                                -fx-font-size: 26px;                                -fx-cursor: hand;" text="ðŸ‘" StackPane.alignment="CENTER_RIGHT" />
            </StackPane>

            <GridPane>
                <columnConstraints>
                    <ColumnConstraints percentWidth="60.0" />
                    <ColumnConstraints percentWidth="40.0" />
                </columnConstraints>

                <CheckBox style="-fx-font-size: 16px;" text="Ricorda l'accesso" GridPane.columnIndex="0" />

                <Label style="-fx-text-fill: #555; -fx-font-size: 14px;" text="Credenziali dimenticate?" GridPane.columnIndex="1" GridPane.halignment="RIGHT" />
            <rowConstraints>
               <RowConstraints />
            </rowConstraints>
            </GridPane>

            <Label fx:id="accessErrorMessageLabel" style="-fx-text-fill: #d70707; -fx-font-size: 14px;" text="" />

            <Button maxWidth="Infinity" onAction="#loadHomePage" style="-fx-background-color: #d70707;                            -fx-text-fill: white;                            -fx-font-size: 20px;                            -fx-font-weight: bold;                            -fx-background-radius: 14;                            -fx-padding: 16 0 16 0;" text="ACCEDI">
            <effect>
               <InnerShadow choke="0.17" height="53.38" offsetX="-10.0" offsetY="-10.0" radius="26.93" width="56.34">
                  <color>
                     <Color opacity="0.25" />
                  </color>
               </InnerShadow>
            </effect></Button>

            <HBox alignment="CENTER" spacing="14.0">
                <Separator opacity="0.35" HBox.hgrow="ALWAYS" />
                <Label style="-fx-font-size: 18px; -fx-text-fill: #222;" text="Sei nuovo cliente?" />
                <Separator opacity="0.35" HBox.hgrow="ALWAYS" />
            </HBox>

            <Label alignment="CENTER" maxWidth="Infinity" onMouseClicked="#loadRegisterPage" style="-fx-text-fill: #d70707;                           -fx-font-size: 24px;                           -fx-font-weight: bold;                           -fx-underline: true;" text="Registrati">
            <effect>
               <InnerShadow choke="0.17" height="53.38" offsetX="-10.0" offsetY="-10.0" radius="26.93" width="56.34">
                  <color>
                     <Color opacity="0.25" />
                  </color>
               </InnerShadow>
            </effect></Label>
        </VBox>
    </VBox>

</GridPane>
